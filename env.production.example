# DataBot Production Environment Configuration

# =============================================================================
# REQUIRED SETTINGS
# =============================================================================

# Discord Bot Configuration (production bot)
DISCORD_BOT_TOKEN=your_production_discord_bot_token_here
DISCORD_GUILD_ID=your_production_guild_id_here

# YouTube API Configuration
YOUTUBE_API_KEY=your_youtube_api_key_here

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================

# PostgreSQL Database (use strong password)
POSTGRES_PASSWORD=very_secure_production_password_here

# =============================================================================
# APPLICATION CONFIGURATION
# =============================================================================

# Environment
ENVIRONMENT=production

# Logging (reduced verbosity for production)
LOG_LEVEL=WARNING

# Rate Limiting (stricter for production)
RATE_LIMIT_REQUESTS=10
RATE_LIMIT_WINDOW=60

# Cache Configuration
CACHE_TTL=3600

# Bot Configuration
COMMAND_PREFIX=!
MAX_VIDEOS_PER_USER=100

# =============================================================================
# MONITORING
# =============================================================================

# Grafana Admin Password
GRAFANA_ADMIN_PASSWORD=secure_grafana_password_here

# =============================================================================
# EXTERNAL SERVICES
# =============================================================================

# Slack Webhook for Notifications
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/SLACK/WEBHOOK

# =============================================================================
# BACKUP CONFIGURATION
# =============================================================================

# S3 Backup Configuration (optional)
# AWS_ACCESS_KEY_ID=your_aws_access_key
# AWS_SECRET_ACCESS_KEY=your_aws_secret_key
# S3_BACKUP_BUCKET=databot-backups-bucket
